<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashscreen_bg">
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	        <RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" >
	            <ImageView
	                android:layout_width="200dp"
	                android:layout_height="200dp"
	                android:id="@+id/profile_image"
	                android:maxWidth="200dp"
	                android:maxHeight="200dp"
	                android:layout_centerHorizontal="true"
	                android:layout_marginTop="20dp"/>
				 <TextView 
			        android:id="@+id/profile_textView"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/profile_image"
			        android:layout_centerHorizontal="true"
			        android:textColor="#000"
			        android:padding="10dp"
			        android:layout_marginBottom="10dp" />
				 <Button
				     android:id="@+id/logout_button"
				     android:layout_width="wrap_content"
				     android:layout_height="wrap_content"
				     android:padding="10dp"
				     android:background="@drawable/midorys"
				     android:textColor="#FFFF"
				     android:layout_below="@+id/profile_textView"
				     android:layout_centerHorizontal="true"
				     android:text="Log Out"
				     />
		</RelativeLayout>
	</ScrollView>	<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-22dp"
        android:gravity="bottom|center_horizontal"
        android:src="@drawable/splashscreen_footer" />
</RelativeLayout>