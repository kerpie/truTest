<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:background="@drawable/fondo_grande"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/idperson"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="7dip"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/foto_redondo"
                    android:src="@drawable/anon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MR X"
                  android:textSize="18dip"
                    android:textColor="#38245D"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="snacked-in a"
                    android:textColor="#000000"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="10"
                    android:text="N"
                    android:textSize="18dip"
                    android:textColor="#38245D"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
        		android:background="@drawable/fondopho"
              android:layout_width="220dp"
                android:layout_height="200dp"
             >

            <ImageView
                android:id="@+id/idproduct"
                android:layout_width="200dp"
                android:layout_height="190dp"
                android:paddingBottom="40dp"
                android:paddingLeft="22dp"
                android:paddingRight="10dp"
                android:paddingTop="25dp"
                android:src="@drawable/incon" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>